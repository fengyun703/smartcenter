<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.lw.smartcenter.view.NoScrollViewPager
        android:id="@+id/content_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/content_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:background="@drawable/bottom_tab_bg"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/content_tab_home"
            style="@style/tab_style"
            android:drawableTop="@drawable/content_tab_home_selecor"
            android:text="主页" />

       <RadioButton
            android:id="@+id/content_tab_news"
            style="@style/tab_style"
            android:drawableTop="@drawable/content_tab_news_selecor"
            android:text="新闻" />

         <RadioButton
            android:id="@+id/content_tab_smartsevice"
            style="@style/tab_style"
            android:drawableTop="@drawable/content_tab_smartsevice_selecor"
            android:text="智慧服务" />

          <RadioButton
            android:id="@+id/content_tab_goveraffairs"
            style="@style/tab_style"
            android:drawableTop="@drawable/content_tab_goveraffairs_selecor"
            android:text="政务" />

        <RadioButton
            android:id="@+id/content_tab_setting"
            style="@style/tab_style"
            android:drawableTop="@drawable/content_tab_setting_selecor"
            android:text="设置" />  
    </RadioGroup>

</LinearLayout>