<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
      
        <ImageView
            android:id="@+id/newsmenu_arr_iv"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/news_cate_arr" />
        
          <com.lw.smartcenter.view.NoInterceptIndicator
              android:layout_toLeftOf="@id/newsmenu_arr_iv"
            android:id="@+id/newsmenu_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/newsmenu_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>